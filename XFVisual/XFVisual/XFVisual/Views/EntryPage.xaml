<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:markupextensions="clr-namespace:XFVisual.MarkupExtensions"
            mc:Ignorable="d"
            Title="Entries"
            x:Class="XFVisual.Views.EntryPage">

    <ContentPage Title="Default"
                 IconImageSource="{markupextensions:ImageResource XFVisual.Assets.default.png}">
        <ContentPage.Content>
            <ScrollView>
                <StackLayout>
                    <Label Text="Default" />
                    <Entry Placeholder="Enter short note here" />

                    <Label Text="Disabled" />
                    <Entry Placeholder="Enter short note here"
                           IsEnabled="False" />

                    <Label Text="PlaceholderColor" />
                    <Entry Placeholder="Enter short note here"
                           PlaceholderColor="{StaticResource PrimaryTextColor}" />

                    <Label Text="TextColor" />
                    <Entry Placeholder="Enter short note here"
                           TextColor="{StaticResource PrimaryTextColor}" />
                </StackLayout>
            </ScrollView>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Material"
                 IconImageSource="{markupextensions:ImageResource XFVisual.Assets.material.png}"
                 Visual="Material">
        <ContentPage.Content>
            <ScrollView>
                <StackLayout>
                    <Label Text="Default (Material)" />
                    <Entry Placeholder="Enter short note here" />

                    <Label Text="Disabled (Material)" />
                    <Entry Placeholder="Enter short note here"
                           IsEnabled="False" />

                    <Label Text="PlaceholderColor (Material)" />
                    <Entry Placeholder="Enter short note here"
                           PlaceholderColor="{StaticResource PrimaryTextColor}" />

                    <Label Text="TextColor (Material)" />
                    <Entry Placeholder="Enter short note here"
                           TextColor="{StaticResource PrimaryTextColor}" />
                </StackLayout>
            </ScrollView>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>